datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  description String
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  lessons     Lesson[]
}

model Lesson {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  preAmble  String
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
  texts     Text[]
}

model Text {
  id       String   @id @default(cuid())
  text     String
  lessonId String
  lesson   Lesson   @relation(fields: [lessonId], references: [id])
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
}

model Category {
  id      String   @id @default(uuid())
  name    String   @unique
  courses Course[]
}